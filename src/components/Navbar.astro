---
// Importas tus componentes aquí
import '../styles/navbas.css';
---

<nav class="navbar">
  <div class="container" aria-label="Navegación principal">
    <a href="/" class="logo"><img src="/logins.png" alt=""></a>

    <button class="hamburger" type="button" aria-expanded="false" aria-controls="main-menu" aria-label="Abrir menú">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <ul class="nav-links" id="main-menu">
      <li><a href="#home">Home</a></li>
      <li><a href="#servicios">Servicios</a></li>
      <li><a href="#casos-exitos">Casos de Éxito</a></li>
      <li><a href="#portafolio">Portafolio</a></li>
      <li><a href="#sobre-mi">Sobre mi</a></li>
      <li><a href="#investigacion">Investigación</a></li>
      <li><a href="#contacto">Contacto</a></li>
    </ul>
  </div>
</nav>

<script>
  const hamburger = document.querySelector('.hamburger');
  const navLinks = document.querySelector('.nav-links');

  if (hamburger && navLinks) {
    hamburger.addEventListener('click', () => {
      const isOpen = navLinks.classList.toggle('active');
      hamburger.setAttribute('aria-expanded', String(isOpen));
    });
  }
</script>


